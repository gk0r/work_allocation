<%- model_class = Project.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:dmr) %></th>
      <th><%= model_class.human_attribute_name(:software_release_id) %></th>
      <th><%= model_class.human_attribute_name(:warrant_status) %></th>
      <th><%= model_class.human_attribute_name(:work_order) %></th>
      <th><%= model_class.human_attribute_name(:rfc) %></th>
      <th><%= model_class.human_attribute_name(:timesheets_request_date) %></th>
      <th><%= model_class.human_attribute_name(:admin_ref) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.id, project_path(project) %></td>
        <td><%= project.name %></td>
        <td><%= project.dmr %></td>
        <td><%= project.software_release.name %></td>
        <td><%= project.warrant_status %></td>
        <td><%= project.work_order %></td>
        <td><%= project.rfc %></td>
        <td><%= project.timesheets_request_date %></td>
        <td><%= project.admin_ref %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-mini' %>
          <%= link_to 'Delete',
                      project,
                      :method => :delete,
                      :confirm => 'Are you sure',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_path,
            :class => 'btn btn-primary' %>
