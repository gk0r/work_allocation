<%- model_class = Project.new.class -%>
<legend><%=t '.title', :default => model_class.model_name.human.pluralize %></legend>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>DMR</th>
      <th>Release</th>
      <th>Warrant</th>
      <th>Work Order</th>
      <th>RFC</th>
      <th>Timesheets</th>
      <th>Admin Ref</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.id, project_path(project) %></td>
        <td><%= project.name %></td>
        <td><%= project.dmr %></td>
        <td><%= project.software_release.name %></td>
        <td><%= project.warrant_status %></td>
        <td><%= project.work_order %></td>
        <td><%= project.rfc %></td>
        <td><%= project.timesheets_request_date %></td>
        <td><%= project.admin_ref %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-mini' %>
          <%= link_to 'Delete',
                      project,
                      :method => :delete,
                      :confirm => 'Are you sure',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_path,
            :class => 'btn btn-primary' %>
