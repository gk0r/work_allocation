<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :input_html => {:class=>'span4'} %>
  <%= f.input :dmr, :label => t('project.dmr'), :input_html=>{:class=>'span1'} %>
  <%= f.association :software_release, :label => t('project.software_release') %>
  <%= f.input :warrant_status, :collection => ['Warranted', 'Conditionally Warranted', 'Not Warranted'], :label => t('project.warrant_status') %>
  <%= f.input :work_order, :label => t('project.work_order'), :input_html=>{:class=>'span1'} %>
  <%= f.input :rfc, :label => t('project.rfc'), :input_html=>{:class=>'span1'} %>
  <%= f.input :timesheets_request_date, :label => t('project.timesheets_request_date'), :input_html=>{:class=>'span2'} %>
  <%= f.input :admin_ref, :label => t('project.admin_ref'), :input_html=>{:class=>'span5'} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
