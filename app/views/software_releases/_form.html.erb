<%= simple_form_for @software_release, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name, :label => t('release.name') %>
  <%= f.input :date, :label => t('release.date') %>
  <%= f.input :version, :label => t('release.version'), :input_html => { :class => 'span1'} %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                software_releases_path, :class => 'btn btn-danger' %>
  </div>

<% end %>
