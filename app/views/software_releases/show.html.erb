<%- model_class = @software_release.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @software_release.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= @software_release.date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:version) %>:</strong><br>
  <%= @software_release.version %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              software_releases_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_software_release_path(@software_release), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              software_release_path(@software_release),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
