<%= nested_form_for @deliverable do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  
  
  <%= f.fields_for :ba_deliverables do |ba| %>
    <%= ba.text_field :comment %>
    <%= ba.link_to_remove "Remove this task" %>
  <% end %>
  <p><%= f.link_to_add "Add a task", :ba_deliverables %></p>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                deliverables_path, :class => 'btn btn-danger' %>
  </div>
<% end %>

