.index-heading Tech Specs

table.index-table
  thead
    tr
      th Project
      th Deliverable
      th Programmer
      th Effort
      th Spec Name
      th Comment
      th Progress
      th Internal review
      th Internal review signoff
      th Final version
      th Delete

  tbody
    - @tech_specs.each do |ts|
      tr
        td = index_link ts.deliverable.try(:project).try(:name),              edit_tech_spec_path(ts)
        td = index_link ts.deliverable.try(:description),                     edit_tech_spec_path(ts)
        td = index_link ts.user.try(:name),                                   edit_tech_spec_path(ts)
        td = index_link ts.effort,                                            edit_tech_spec_path(ts)
        td = index_link ts.name,                                              edit_tech_spec_path(ts)
        td = index_link ts.comments,                                          edit_tech_spec_path(ts)
        td = index_link ts.progress.to_s,                                     edit_tech_spec_path(ts)
        td = index_link index_format_date(ts.internal_review_date),           edit_tech_spec_path(ts)
        td = index_link tick_box(ts.internal_review_signoff),                 edit_tech_spec_path(ts)
        td = index_link index_format_date(ts.final_version),                  edit_tech_spec_path(ts)
        td = delete_link ts

.row

= link_to 'New Tech Spec', new_tech_spec_path, :class => 'btn btn-primary'
