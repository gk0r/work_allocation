legend Users
table.table.table-striped
  thead
    tr
      th Name
      th Username
      th Telephone
      th Role
      th Team
      th Actions

  tbody
    - @users.each do |user|
      tr
        td = link_to user.first_name, edit_user_path(user)
        td = link_to user.username, edit_user_path(user)
        td = link_to user.telephone_number, edit_user_path(user)
        td = link_to user.role.name, edit_user_path(user)
        td = link_to user.team.name, edit_user_path(user)
        td = link_to "Delete", user_path(user), :method => :delete, :confirm => 'Are you sure you want to delete this user?',
                      :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary'
